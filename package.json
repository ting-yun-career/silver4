{
  "name": "salon",
  "version": "1.0.0",
  "description": "",
  "main": "js/main.js",
  "scripts": {
    "scss": "node_modules/.bin/node-sass scss/index.scss --output build --source-map true --source-map-contents --output-style compact",
    "uglify": "node_modules/.bin/uglifyjs js/main.js -cmo build/main.min.js --source-map",
    "copy": "cp -R asset/ index.html scss/normalize.css js/main.js ./build",
    "clean": "rm -rf build",
    "init": "mkdir -p build && touch build/main.min.js",
    "rebuild": "npm run clean && npm run init && npm run copy && npm run scss && npm run uglify",
    "watch": "node_modules/.bin/onchange 'js/*.js' 'scss/*.scss' 'index.html' -p -i -- npm run rebuild",
    "reload": "reload -b -d build -n 127.0.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.7.2",
    "onchange": "^4.1.0",
    "reload": "^2.4.0",
    "uglify-js": "^3.3.16"
  }
}
